<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pagrindinis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Vartotojų posistemė
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>@Html.ActionLink("Prideti vartotoja", "AddUser", "UserSubsystem")</li>
                            <li>@Html.ActionLink("Siųsti priminimą", "SendReminder", "UserSubsystem")</li>

                        </ul>
                    </li>
                    <li>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Registracijos posistemė
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>@Html.ActionLink("Medžiagos tekstūros", "Index", "Tekstura")</li>
                            <li>@Html.ActionLink("Baldų tipai", "Index", "Tipas")</li>
                            <li>@Html.ActionLink("Transportavimo tipai", "Index", "Transporto")</li>
                            <li>@Html.ActionLink("Sutarčių ataskaitos", "Index", "Ataskaita")</li>
                        </ul>
                    </li>
                    <li>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Apsilankymų posistemė
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>@Html.ActionLink("Medžiagos tekstūros", "Index", "Tekstura")</li>
                            <li>@Html.ActionLink("Baldų tipai", "Index", "Tipas")</li>
                            <li>@Html.ActionLink("Transportavimo tipai", "Index", "Transporto")</li>
                            <li>@Html.ActionLink("Sutarčių ataskaitos", "Index", "Ataskaita")</li>
                        </ul>
                    </li>
                    <li>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Receptų posistemė
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>@Html.ActionLink("Medžiagos tekstūros", "Index", "Tekstura")</li>
                            <li>@Html.ActionLink("Baldų tipai", "Index", "Tipas")</li>
                            <li>@Html.ActionLink("Transportavimo tipai", "Index", "Transporto")</li>
                            <li>@Html.ActionLink("Sutarčių ataskaitos", "Index", "Ataskaita")</li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
