@{
    ViewBag.Title = "AddUser";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body>
    <h3>Registruoti naują vartotoją</h3>
    <div class="form-group">
        <label for="email">El. paštas</label>
        <input type="email" class="form-control" placeholder="stud@ktu.edu" name="email" required>
    </div>
    <div class="form-group">
        <label for="psw">Slaptažodis</label>
        <input type="password" class="form-control" placeholder="123456" name="psw" required>
    </div>
    <div class="form-group">
        <label for="psw-repeat"><b>Pakartokite slaptažodį</b></label>
        <input type="password" class="form-control" placeholder="123456" name="psw-repeat" required>
    </div>
    <div class="form-group">
        <label for="fname"><b>Vardas</b></label>
        <input type="text" class="form-control" placeholder="Vardas" name="fname" required>
    </div>
    <div class="form-group">
        <label for="lname"><b>Pavardė</b></label>
        <input type="text" class="form-control" placeholder="Pavardė" name="lname" required>
    </div>
    <div class="form-group">
        <label for="phone"><b>Telefonas</b></label>
        <input type="text" class="form-control" placeholder="+37063334444" name="phone" required>
    </div>
    <div class="form-group">
        <label for="bdate"><b>Gimimo metai</b></label>
        <input type="date" class="form-control" placeholder="yyyy-mm-dd" name="bdate">
    </div>
    <div class="form-group">
        <label for="city"><b>Miestas</b></label>
        <input type="text" class="form-control" placeholder="Kaunas" name="city" required>
    </div>
    <div class="form-group">
        <label for="street"><b>Gatvė</b></label>
        <input type="text" class="form-control"placeholder="Studentų g. 48" name="street" required>
    </div>
    <div class="form-group">
        <label for="houseNum"><b>Namo nr.</b></label>
        <input type="text" class="form-control" placeholder="50" name="houseNum" required>
    </div>
    <div class="form-group">
        <label for="zipCode"><b>Pašto kodas</b></label>
        <input type="text" class="form-control" placeholder="44100" name="zipCode" required>
    </div>
    <div class="form-group">
        <input type="radio" name="role" value="admin"> Administratorius<br>
        <input type="radio" name="role" value="doctor"> Daktaras<br>
        <input type="radio" name="role" value="patient" required> Pacientas
    </div>
    <button type="submit" class="btn btn-primary" onclick="location.href = '../';">Registruoti</button>

</body>